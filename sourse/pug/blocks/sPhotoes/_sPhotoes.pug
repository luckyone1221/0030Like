mixin sPhotoes(data)
	// start sPhotoes
	+b.sPhotoes.section#sPhotoes&attributes(attributes)
		.container
			+e.inner
				+e.row.row
					if block
						block
					else
						- for( var i = 0; i < 15; i++)
							+photoItem()
				.text-center
					+e.refresh-btn(href="#") обновить страницу

	// end sPhotoes

mixin photoItem()
	+e.col.col-6.col-sm-4.col-md-3.col-lg-part-5
		+e.item(href="#")
			+e.img
				img(loading="lazy" src="img/@2x/user-img.jpg" alt="")
			+e.heart-bl
				span + 1
				+icon('heart')

mixin photoItem2(likesAmount='17')
	+e.col.col-6.col-sm-4.col-md-3.col-lg-part-5
		+e.item(href="#")
			+e.img
				img(loading="lazy" src="img/@2x/user-img.jpg" alt="")
			+e.bot-likes
				span=likesAmount
				+icon('heart')